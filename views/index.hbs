<!-- Link to General Map -->
<script src="/js/mapbox-general.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {

  let cardsDate = document.getElementsByClassName('card-date');
  for (let i = 0; i < cardsDate.length; i++) {
    cardsDate[i].innerText = cardsDate[i].innerText.slice(4, 15);
  }

  let popupCard = document.querySelectorAll('.mapboxgl-popup-content h3')
  for (var i = popupCard.length - 1; i >= 0; i--) {
    let cityName = popupCard[i].innerText.split(',')[0]
    popupCard[i].innerText = cityName;
  }
  console.log("project-2-full-stack-website JS imported successfully!");
});
</script>
