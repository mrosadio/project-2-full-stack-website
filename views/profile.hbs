
<h1 class="">Hello {{user.username}}</h1>

<div class="row">
    <a class="btn btn-primary" href="/">Home</a>
    <a class="btn btn-success" href="/add-card">Add New Card</a>
</div>

<div class="row">
    <a class="btn btn-danger btn-sm" href="/auth/logout">Logout</a>
</div>

<div class="container mt-4">
<div class="row map-section">
    <div class="col-md-5">
        <div id="mapbox" style='width: 400px; height: 300px;'></div>
    </div>

    <div class="col-md-5">
        <h3 class=""><a href="/user-cards">Your Map</a></h3>

        {{!-- PARTIAL START HERE --}}
        <div>
        {{#each cardByUser}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{city}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{date}}</h6>
                <p class="card-text">{{recommendation}}</p>
                <a href="#" class="card-link btn btn-primary btn-sm">Edit Card</a>
                {{!-- <a href="#" class="card-link btn btn-danger btn-sm">Delete</a> --}}
                <form action="/user-cards/{{_id}}/delete" method="POST" class="mt-4">
                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
            </div>
        </div>
        {{/each}}
        </div>
        {{!-- END OF THE PARTIAL --}}
    </div>
</div>
</div>


<a class="btn btn-light btn-sm mt-4" href="#"><em>Favourite Users</em></a>
