<div class="card" style="width: 10rem;">
    <div class="card-body">
        <h5 class="card-title font-weight-bold">{{city}}</h5>
        <h6 class="card-subtitle mb-2 text-muted small card-date">{{date}}</h6>
        <p class="card-text">{{recommendation}}</p>
        <div class="row justify-content-around card-buttons">
            <a href="/user-cards/{{_id}}/edit" class="card-link btn btn-sm">Edit Card</a>
            <form action="/user-cards/{{_id}}/delete" method="POST" class="mb-0">
                <button class="btn btn-sm text-white" type="submit">Delete</button>
            </form>
        </div>
    </div>
    <div class="card-footer text-white">
        {{#if userOwnerName}}
        <h6 class="small mb-0">autor: {{userOwnerName}}</h6>
        {{/if}}
    </div>
</div>